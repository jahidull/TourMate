<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <ScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"

    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#DCDCDC"

            android:gravity="center"
            >

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="#ffffff"
                android:layout_marginRight="1dp"
                android:paddingBottom="20dp"
                android:id="@+id/btn_need_blood"
                android:layout_marginEnd="1dp">
                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/recieve_logo"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="string/need_blood"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="#ffffff"
                android:layout_marginLeft="172dp"
                android:paddingBottom="20dp"
                android:id="@+id/btn_donor_profile"
                android:layout_marginStart="172dp">
                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/donate_logo"
                     />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="string/donate_blood"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="#ffffff"
                android:layout_marginTop="173dp"
                android:layout_marginRight="1dp"
                android:paddingBottom="20dp"
                android:id="@+id/profile"
                android:layout_marginEnd="1dp">
                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/logo"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="#ffffff"
                android:layout_marginLeft="172dp"
                android:layout_marginTop="173dp"
                android:paddingBottom="20dp"
                android:id="@+id/map"
                android:layout_marginStart="172dp">
                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/maps_logo"
                   />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blood Map"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="#ffffff"
                android:layout_marginTop="346dp"
                android:layout_marginRight="1dp"
                android:paddingBottom="20dp"
                android:id="@+id/about"
                android:layout_marginEnd="1dp">
                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/logo"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="string/about_us"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="#ffffff"
                android:layout_marginLeft="172dp"
                android:layout_marginTop="346dp"
                android:paddingBottom="20dp"
                android:id="@+id/term"
                android:layout_marginStart="172dp">
                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"

                    app:srcCompat="@drawable/logo"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Term Condition"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom"
                    android:gravity="center"/>
            </FrameLayout>




        </RelativeLayout>


    </LinearLayout>
</ScrollView>

    <ListView
        android:id="@+id/list_donor"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:visibility="invisible"
        />


</RelativeLayout>